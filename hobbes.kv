#: import Window kivy.core.window.Window

<MainScreen>:

    canvas.before:
        Color:
            rgba: 0.098, 0.203, 0.255, 1 # Folder list background color
        Rectangle:
            pos: self.pos
            size: (Window.width*0.2, Window.height)

        Color:
            rgba: 0.243, 0.376, 0.435, 1 # Note list background color
        Rectangle:
            pos: (Window.width*0.2, 0)
            size: (Window.width*0.2, Window.height)

<NoteTextRenderer>:

    text_size: self.size
    halign: 'right'
    valign: 'middle'



<ScrollView>:

    do_scroll_x: False
    do_scroll_y: True

    size_hint: (1,None)
    size: (Window.width, Window.height)

<NoteButton>

    background_normal: 'images/button_normal.png'
    background_down: 'images/button_down.png'

	canvas.before:
		Color:
			rgba: 0.569, 0.667, 0.616, 1
		Rectangle:
			pos: self.pos
			size: self.width, self.height

        Color:
            rgba: 0, 0, 0, 1
        Line:
            width: 1
            rectangle: self.x, self.y, self.width, self.height
