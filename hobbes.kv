#: import Window kivy.core.window.Window

<MainScreen>:

    canvas.before:
        Color:
            rgba: 0.098, 0.203, 0.255, 1 # Folder list background color
        Rectangle:
            pos: self.pos
            size: (Window.width*0.2, Window.height)

        Color:
            rgba: 0.243, 0.376, 0.435, 1 # Note list background color
        Rectangle:
            pos: (Window.width*0.2, 0)
            size: (Window.width*0.2, Window.height)

<ScrollView>:

    do_scroll_x: False
    do_scroll_y: True

    size_hint: (1,None)
    size: (Window.width, Window.height)

<SearchButton>:

    background_normal: ''
    background_down: ''
    size_hint: (1,None)
    size: (0, 30)
    background_color: 1, 1, 1, 1

    canvas.after:
        Color:
            rgba: 0, 0, 0, 0.5
        Line:
            width: 1
            rectangle: self.x, self.y, self.width, 1

<NoteButton>:

    background_normal: ''
    background_down: ''
    background_color: 1, 1, 1, 1 # Note button color
    color: 0, 0, 0, 1            # Note text color
    border: 0, 0, 0, 0

    # This makes the height of the buttons adjust
    # according the text size
    text_size: self.width, None
    height: self.texture_size[1]*1.2

	canvas.after:
        Color:
            rgba: 0, 0, 0, 0.5
        Line:
            width: 1
            rectangle: self.x, self.y, self.width, 1
            
<NoteTextRenderer>:

    do_scroll_x: False
    do_scroll_y: True

    canvas.before:
        Color:
            rgba: 1, 1, 1, 1 # Background
        Rectangle:
            pos: self.pos
            size: self.size

    Label:
        id: label
        markup: True
        text_size: self.width, None  # Set the text wrap box width
        size_hint_y: None
        height: self.texture_size[1]  # Set the Label height to the text height

        color: 0, 0, 0, 1 # Text color

