#: import Window kivy.core.window.Window

<MainScreen>:

    canvas.before:
        Color:
            rgba: 0.098, 0.203, 0.255, 1 # Folder list background color
        Rectangle:
            pos: self.pos
            size: (Window.width*0.2, Window.height)

        Color:
            rgba: 0.243, 0.376, 0.435, 1 # Note list background color
        Rectangle:
            pos: (Window.width*0.2, 0)
            size: (Window.width*0.2, Window.height)

<ScrollView>:

    do_scroll_x: False
    do_scroll_y: True

    size_hint: (1,None)
    size: (Window.width, Window.height)

<SearchButton>:

    background_normal: ''
    background_down: ''
    size_hint: (1,None)
    size: (0, 30)
    background_color: 1, 1, 1, 1

    on_press: print("ouch! More gently please")

    canvas.after:
        Color:
            rgba: 0, 0, 0, 0.5
        Line:
            width: 1
            rectangle: self.x, self.y, self.width, 1

<NoteButton>

    background_normal: ''
    background_down: ''
    background_color: 1, 1, 1, 1 # Note button color
    color: 0, 0, 0, 1            # Note text color
    border: 0, 0, 0, 0

	canvas.after:
        Color:
            rgba: 0, 0, 0, 0.5
        Line:
            width: 1
            rectangle: self.x, self.y, self.width, 1
            